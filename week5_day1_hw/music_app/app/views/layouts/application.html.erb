<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <header>
    <% if user = logged_in_user %>
      Welcome back, <%= user.email %>! <%= button_to "Log Out", session_url, method: "delete" %>
    <% else %>
      <%= button_to "Log In", new_session_url, method: "get" %> <%= button_to "Sign Up", new_user_url, method: "get" %>
    <% end %>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
